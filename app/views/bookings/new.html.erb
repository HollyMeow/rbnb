<div class="container text-center">
  <h2>Confirmer votre réservation</h2>
  <div>
    <%= simple_form_for([@petsitter, @booking], remote: true) do |r| %>
     <%= r.input :date_start, as: :date, label: 'Date de début :', html5:true, label: 'Date de fin :'%>
     <%= r.input :date_end, as: :date, label: 'Date de début :', html5:true, label: 'Date de fin :'%>
     <%= r.button :submit, value: 'Confirmer la réservation', class: 'btn-success btn-block col-xs-6' %>
    <% end %>
  </div>
</div>
